<script id="franchise-show-template" type="text/x-handlebars-template">
  <div class="row">
    <button id="previous" class="show btn col-3" onclick="showPrevious();">See Previous Franchise</button>
    <h1 class="mt-5 col">{{name}}</h1>
    <button id="next" class="show btn col-3" onclick="showNext();">See Next Franchise</button>
  </div>
  <br>
  <p id="franchise-id" value={{id}}>Franchise ID: {{id}}</p>
  <p id=>Medium: {{medium}}</p>
  {{#if your_rating}}
    <p id="ratings-count">{{ratings_count_text}}</p>
    <p id="average-rating">{{average_rating_text}}</p>
    <p id="rating-id" value={{your_rating.id}}>Your Rating: {{your_rating.stars}}</p>
    {{> rating-form your_rating}}
  {{else}}
    <p id="ratings-count">Total Number of Ratings: 0</p>
    <p id="average-rating">Average Rating: None</p>
    <p id="empty-rating">Your Rating: None</a></p>
    {{> rating-form your_rating franchise_id=id}}
  {{/if}}
</script>

